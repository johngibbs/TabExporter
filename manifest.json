{
  "manifest_version": 3,
  "name": "Tab Exporter",
  "version": "1.0.0",
  "description": "Export your browser tabs and groups to a markdown file.",
  "author": "John Gibbs",
  "homepage_url": "https://github.com/johngibbs/TabExporter",
  "short_name": "TabExporter",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "windows",
    "downloads",
    "tabGroups",
    "storage"
  ]
}
